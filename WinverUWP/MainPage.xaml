<Page
    x:Class="WinverUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinverUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:WinverUWP.Converters"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Loaded="Page_Loaded">

    <Page.Resources>
        <Thickness x:Key="NavigationViewContentGridBorderThickness">0</Thickness>
        <CornerRadius x:Key="NavigationViewContentGridCornerRadius">0</CornerRadius>
        <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent"></SolidColorBrush>
        <converters:TextToVisibilityConverter x:Key="TextToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Background="Transparent" Name="TitleBar" Height="32">
            <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Text="About Windows"
                       Name="AppTitle"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="{StaticResource TitleBarLeftMargin}"/>
        </Grid>
        
        <Image HorizontalAlignment="Stretch" 
               VerticalAlignment="Top" 
               Grid.Row="1" 
               Source="/Assets/Windows11Logo-dark.svg" 
               Margin="100,20" 
               MaxWidth="300"
               Name="BrandImage"/>
        
        <StackPanel Grid.Row="2" Margin="5">
            <muxc:Expander ExpandDirection="Down" 
                       IsExpanded="True"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Stretch" 
                       HorizontalContentAlignment="Stretch"
                       VerticalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <Grid>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left">Windows specifications</TextBlock>
                        <Button VerticalAlignment="Center" HorizontalAlignment="Right" Name="CopyButton" Click="CopyButton_Click">Copy</Button>
                    </Grid>
                </muxc:Expander.Header>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="0,0,20,5">Edition</TextBlock>
                    <TextBlock Name="Edition" 
                           Margin="0,0,0,5" 
                           Grid.Column="1" 
                           Foreground="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" 
                           Text="{x:Bind OSInfo.Edition,Mode=OneWay}"/>
                    <TextBlock Margin="0,0,20,5" Grid.Row="1">Version</TextBlock>
                    <TextBlock Name="Version" 
                           Margin="0,0,0,5" 
                           Grid.Column="1" 
                           Foreground="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" 
                           Grid.Row="1"
                           Text="{x:Bind OSInfo.Version,Mode=OneWay}"/>
                    <TextBlock Margin="0,0,20,5" Grid.Row="2">Installed on</TextBlock>
                    <TextBlock Name="InstalledOn" 
                           Margin="0,0,0,5" 
                           Grid.Column="1" 
                           Foreground="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"
                           Grid.Row="2"
                           Text="{x:Bind OSInfo.InstalledOn,Mode=OneWay}"/>
                    <TextBlock Margin="0,0,20,5" Grid.Row="3">OS build</TextBlock>
                    <TextBlock Name="Build" 
                           Margin="0,0,0,5" 
                           Grid.Column="1" 
                           Foreground="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" 
                           Grid.Row="3"
                           Text="{x:Bind OSInfo.Build,Mode=OneWay}"/>
                    <TextBlock Margin="0,0,20,5" Grid.Row="4">Experience</TextBlock>
                    <TextBlock Name="Experience" Margin="0,0,0,5" Grid.Column="1" Foreground="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" Grid.Row="4"/>
                </Grid>
            </muxc:Expander>

            <muxc:Expander ExpandDirection="Down" 
                       IsExpanded="True"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Stretch" 
                       HorizontalContentAlignment="Stretch"
                       VerticalContentAlignment="Stretch"
                       Margin="0,5,0,0">
                <muxc:Expander.Header>
                    <Grid>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left">Legal</TextBlock>
                    </Grid>
                </muxc:Expander.Header>
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock TextWrapping="WrapWholeWords"
                           Name="LicensingText"
                           HorizontalAlignment="Stretch">
                    The Windows operating system and its user interface
                    are protected by trademark and other pending or existing
                    intellecutal property rights in the United States and other
                    countries or regions.
                    </TextBlock>
                    <TextBlock Margin="0,20,0,0" TextWrapping="WrapWholeWords">
                    This product is licensed under the Microsoft Software License Terms to:
                    </TextBlock>
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock TextWrapping="Wrap" 
                               Name="OwnerText" 
                               Visibility="{x:Bind OSInfo.Owner, Mode=OneWay, Converter={StaticResource TextToVisibilityConverter}}"
                               Text="{x:Bind OSInfo.Owner, Mode=OneWay}"/>
                        <TextBlock TextWrapping="Wrap"
                               Name="OrgText"
                               Visibility="{x:Bind OSInfo.Corporation, Mode=OneWay, Converter={StaticResource TextToVisibilityConverter}}"
                               Text="{x:Bind OSInfo.Corporation, Mode=OneWay}"/>
                    </StackPanel>
                </StackPanel>
            </muxc:Expander>
        </StackPanel>
        <Button Style="{StaticResource AccentButtonStyle}"
                Content="OK"
                Margin="10"
                Grid.Row="3"
                HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Page>
